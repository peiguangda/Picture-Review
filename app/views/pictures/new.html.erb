<div class="main-container">
  <header class="fullscreen-element no-pad centered-text">
    <div class="background-image-holder parallax-background overlay">
      <a href="#" class="background-image"> <%= image_tag "background.jpg" %></a>
    </div>

    <div class="container">
      <div class="row">
        <div class="dme col-sm-12 col-md-12 col-lg-12 col-xs-12">
          <div class="page-ads box form-post">
            <% flash.each do |message_type, message| %>
              <%= content_tag :div, message, class: "alert alert-#{message_type}" %>
            <% end %>
            <h2 class="title-2">Sale a new pictures</h2>
            <%= form_for @picture, class: "search-form" do |f| %>

              <div class="col-md-4 col-sm-12 search-col">
                <div class="input-group-addon search-category-container">
                  <label class="styled-select"><span class="hidden-sm hidden-xs">Category </span>
                    <%= f.select :category, [["Tranh Dong Ho", "Tranh Dong Ho"], ["Tranh Son Mau", "Tranh Son Mau"], ["Tranh Lua", "Tranh Lua"], ["Tranh Xi Dau", "Tranh Xi Dau"]], class: "dropdown-product" %>
                  </label>
                </div>
              </div>

              <div class="row search-bar mb30 red-bg">
                <div class="advanced-search">
                </div>
              </div>
              <div class="form-group mb30">
                <label class="control-label">Name</label>
                <%= f.text_field :name, class: "form-control input-md", placeholder: "Write a suitable title for your ad", required: true %>
                <span class="help-block">A great title needs at least 60 characters.</span>
              </div>
              <div class="form-group mb30">
                <label class="control-label" for="textarea">Describe</label>
                <%= f.text_area :description, class: "form-control", placeholder: "Describe what makes your ad unique", required: true %>
              </div>
              <div class="form-group mb30 clearfix">
                <label class="control-label" for="textarea">Price</label>
                <div class="form-inline">
                  <div class="form-group col-md-3 col-sm-5 col-xs-12">
                    <div class="input-group">
                      <%= f.text_field :price, class: "form-control", placeholder: "Price", type: "number" %>
                      <span class="input-group-addon addon"
                        style="padding: 10px;margin: 10px;">VND</span>
                    </div>
                  </div>
                  <!-- <div class="col-md-2 col-sm-3 col-xs-12 checkbox form-control-static">
                    <label>
                       # f.check_box :negotiable %>
                      <span class="checkbox-material"></span>
                      Negotiable
                    </label>
                  </div> -->
                </div>
              </div>
              <h2 class="title-2">Add Images to Your Ad</h2>
              <div class="form-group is-empty">
                <label class="control-label">Featured Image</label>
                <div class="file-input file-input-new">
                  <div class="file-preview ">
                    <div class="close fileinput-remove">×</div>
                    <div class="file-drop-disabled">
                      <div class="file-preview-thumbnails">
                      </div>
                      <div class="clearfix"></div>
                      <div class="file-preview-status text-center text-success"></div>
                      <div class="kv-fileinput-error file-error-message" style="display: none;"></div>
                    </div>
                  </div>
                  <div class="kv-upload-progress hide">
                    <div class="progress">
                      <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%;">
                        0%
                      </div>
                    </div>
                  </div>

                  <div class="input-group file-caption-main">
                    <div tabindex="500" class="form-control file-caption  kv-fileinput-caption">
                      <div class="file-caption-name"></div>
                    </div>

                    <div class="input-group-btn">
                      <div tabindex="500" class="btn btn-primary btn-file">
                        <i class="glyphicon glyphicon-folder-open"></i>&nbsp;
                        <span class="hidden-xs">Browse …</span>
                        <%= f.file_field :images, class: "file" %>
                      </div>
                    </div>
                  </div>
                  <br>
                  <br>

                </div>
                <!-- <p class="help-block">Add up to 4 photos. Use a real image of your product, not catalogs.</p> -->
                <!-- <div class="page-ads box"> -->
                  <input class="btn btn-common" type="submit" value="Submit">
                <!-- </div> -->
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
</div>

