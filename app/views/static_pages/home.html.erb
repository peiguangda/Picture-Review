<div class="main-container">
  <header class="fullscreen-element no-pad centered-text  okconde home_fix">
    <div class="background-image-holder parallax-background overlay">
      <a href="#" class="background-image"> <%= image_tag "background.jpg" %></a>
    </div>

    <%= render "layouts/search_bar" %>
  </header>
</div>
<div style="background: white">
  <section class="popular">
    <div class="container">
      <div class="title text-center m-b-30">
        <h2 class="all-paiting">All painting and artwork</h2>
        <p class="lead enjoy-beauty">Enjoy the beauty of art</p>
      </div>
      <%= paginate @pictures, theme: "twitter-bootstrap-4" %>
      <div class="row">
        <% @pictures.each do |p| %>
          <div class="col-md-4 food-item">
            <div class="food-item-wrap">
              <div class="figure-wrap bg-image">
                <% if p.images? %>
                  <%= image_tag p.images.url, class: "resize-image" %>
                <% end %>
                <div class="rating2 fa-show-picture" id="fa-show-picture" score= <%= p.average_rate %>>
                </div>
              </div>
              <div class="content">
                <h5 class="post-name"><%= link_to p.name, picture_path(p) %></h5>
                <div class="poster-position">
                  <div class="category-name"><%= p.category %></div>
                  <div class="made-by">Made by <%= p.user.username %></div>
                </div>
                <% if user_signed_in? %>
                <% @a= current_user.bookmarks.find_by(picture_id: p.id) %>
                <% if @a==nil || @a.status == false %>
                 <%= form_for @bookmark  do |f| %>
                 <%= f.hidden_field :picture_id, value: p.id %>
                 <%= f.submit "Bookmark", class: "btn btn-danger submit1" %>
                 <% end %>
                <% else %>
                   <%= form_for @bookmark  do |f| %>
                 <%= f.hidden_field :picture_id, value: p.id %>
                 <%= f.submit "Unbookmark", class: "btn btn-success submit2" %>
                 <% end %>
                <% end %>
                <% end %>

              </div>
              <div class="restaurant-block">
                <div class="left">
                  <div class="pull-left right-text">
                    <span><%= truncate(p.description, length: 150, separator: " ") %></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>

<script>
    $('div#star-rating-design').raty({
        path: '/assets/',
        number: 5,
        score: function () {
            return $(this).attr('score');
        },
        scoreName: 'review[rating]',
        readOnly: false,
        starOn: 'star-on.png',
        half: true,
        starType: 'img',
        click: function (score) {
            var picture_id = $(this).attr('picture_id');
            $.ajaxSetup({
                headers: {
                    'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
                }
            });
            $.ajax({
                type: 'POST',
                url: '/rating_pictures/',
                dataType: 'json',
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))
                },
                data: {
                    design_rate: score,
                    picture_id: picture_id,
                },
                success: function (data) {
                    alert(data.message);
                },
                error: function (data) {
                    alert(data.message);
                }
            });
        }
    });
    $('div#star-rating-price').raty({
        path: '/assets/',
        number: 5,
        score: function () {
            return $(this).attr('score');
        },
        scoreName: 'review[rating]',
        readOnly: false,
        starOn: 'star-on.png',
        half: true,
        starType: 'img',
        click: function (score) {
            var picture_id = $(this).attr('picture_id');
            $.ajaxSetup({
                headers: {
                    'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
                }
            });
            $.ajax({
                type: 'POST',
                url: '/rating_pictures/',
                dataType: 'json',
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))
                },
                data: {
                    price_rate: score,
                    picture_id: picture_id,
                },
                success: function (data) {
                    alert(data.message);
                },
                error: function (data) {
                    alert(data.message);
                }
            });
        }
    });
    $('div#fa-show-picture').raty({
        path: '/assets/',
        number: 5,
        readOnly: true,
        score: function () {
            return $(this).attr('score');
        },
        scoreName: 'review[rating]',
        starOn: 'star-on.png',
        half: true,
        starType: 'img',
    });

</script>
